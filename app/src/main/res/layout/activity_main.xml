<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Activity"
        android:id="@+id/CreateActivityBT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Profile"
        android:id="@+id/OrganizerProfileBT"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Organizer Profile"
        android:id="@+id/EditOrganizerBT"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applicants List"
        android:layout_marginTop="20dp"
        android:id="@+id/BTApplicantsList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OrganizerDashboard"
        android:layout_marginTop="20dp"
        android:id="@+id/BTOrganizerDashboard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up Organizer"
        android:layout_marginTop="20dp"
        android:id="@+id/BTSignUpOrganizer" />

</LinearLayout>