<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_login">




    <ImageView
        android:id="@+id/login_ImageTitle"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ecocity_hub_removebg_preview" />


    <TextView
        android:id="@+id/login_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ImageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="ECOCITY HUB"
        android:textStyle="bold"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/login_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="BRIDGING COMMUNITIES"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/login_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="FOR POSITIVE CHANGE PLATFORM"
        android:textSize="15dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/login_text3"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_shape">


        <TextView
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LOG IN"
            android:textSize="25dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_in"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:width="150dp"
            android:background="@drawable/rounded_edited_text"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_in"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/user_button"
            android:width="150dp"
            android:background="@drawable/rounded_edited_text"
            android:text="Organizer"
            android:textColor="@color/btn_color"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextUsernameOrEmail"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edited_text"
            android:hint="Username"
            android:paddingVertical="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="50dp" />


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextUsernameOrEmail"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edited_text"
            android:hint="Password"
            android:layout_centerHorizontal="true"
            android:paddingVertical="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="192dp" />


        <ImageButton
            android:id="@+id/togglePasswordButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/editTextPassword"
            android:layout_alignBottom="@+id/editTextPassword"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/baseline_visibility_24"
            android:onClick="togglePasswordVisibility"
            android:clickable="true"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/log_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:width="300dp"
            android:background="@drawable/rounded_edited_text"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Forgot Password?"
            android:textColor="@color/links_color"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/dontHaveAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Don't have an account ?"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/createAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dontHaveAcc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Create An Account"
            android:textSize="15dp"
            android:textColor="@color/links_color" />


    </RelativeLayout>

</RelativeLayout>



